<%- include("header") -%>
<body>
    <div class="login-form">
        <% if(status == true ){%>
            <h1>Logged in as <%= user%></h1>
            <% if(key =="notadmin" ){%>
                <div class="alert alert-danger">
                        <strong>Access denied!</strong> This service is only available for an Admin
                      </div>
                <form action="login" method="POST">
                        <input type="email" name="username" placeholder="email" required>
                        <input type="password" name="password" placeholder="Password" required>
                        <input type="submit"value="Login">
                    </form>
                    <%}else if(key=="notclerk"){%>
                        <div class="alert alert-danger">
                            <strong>Access denied!</strong> This service is only available for a Clerk
                          </div>
                    <form action="login" method="POST">
                            <input type="email" name="username" placeholder="email" required>
                            <input type="password" name="password" placeholder="Password" required>
                            <input type="submit"value="Login">
                        </form>
                <% }else{%>
                    <form action="login" method="POST">
                        <input type="email" name="username" placeholder="email" required>
                        <input type="password" name="password" placeholder="Password" required>
                        <input type="submit" value="Login to Another Account">
                    </form>
                <%}%>
            <% }else{%>
                <h1>Please login to use our service</h1>
                <%if(key=="incorrect"){%>
                    <div class="alert alert-danger">
                        <strong>Access denied!</strong> Username or password not valid.
                      </div>
                    <form action="login" method="POST">
                        <input type="email" name="username" placeholder="email" required>
                        <input type="password" name="password" placeholder="Password" required>
                        <input type="submit" value="Login">
                    </form>
                    <a class="nav-link" href="#">Register for new Account</a>
                <%}else if(key=="empty"){%>
                    <div class="alert alert-danger">
                        <strong>please enter something!!</strong> 
                      </div>
                    <form action="login" method="POST">
                        <input type="email" name="username" placeholder="email" required>
                        <input type="password" name="password" placeholder="Password" required>
                        <input type="submit" value="Login">
                    </form>
                    <a class="nav-link" href="#">Register for new Account</a>
                <%}else{%>
                    <form action="login" method="POST">
                        <input type="email" name="username" placeholder="email" required>
                        <input type="password" name="password" placeholder="Password" required>
                        <input type="submit" value="Login">
                    </form>
                    <a style="margin-left:16%;" class="nav-link" href="/register">Register New Account !!</a>
                <%}%>
               
            <%}%>
               
    </div>
</body>
<%- include("footer")-%>