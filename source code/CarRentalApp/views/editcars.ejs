<%- include("header") -%>

<body>
        
    <div id="carsdiv" class= "container">
        <div >
            <form action="/typeedit" method="POST">
                
                         <div class="textbox d-flex justify-content-around" style="display: inline-block; padding-right: 21px; color: #17252A"> 
                            
                            <input class="textbox"  type="checkbox" name="types[]" value="economy"><span style="">Economy</span>
                            <input class="textbox" type="checkbox" name="types[]" value="compact"><span style="">Compact</span>
                            <input class="textbox" type="checkbox" name="types[]" value="mid-size"><span style="">Mid-size</span>
                            <input class="textbox"  type="checkbox" name="types[]" value="standard"><span style="">Standard</span>
                            <input class="textbox" type="checkbox" name="types[]" value="full-size"><span style="">Full-size</span>
                            <input class="textbox" type="checkbox" name="types[]" value="premium"><span style="">Premium</span>
                            <input class="textbox"  type="checkbox" name="types[]" value="luxury"><span style="">Luxury</span>
                            <input class="textbox" type="checkbox" name="types[]" value="suv"><span style="">SUVs</span>
                            <input class="textbox" type="checkbox" name="types[]" value="van"><span >Vans</span>
                         </div>
                         <div class="d-flex justify-content-around" style="padding: 0px; margin-top: 17px;">
                                <input type="submit" id="findbutton" class="btn  btn-block " style=" width: 150px;margin-left: 20px;" name="" value="Select Type">
                         </div>
            </form>
             
        </div>
<hr>
<div id="accordion">
        <div class="card">
          <div class="">
                <% for(var i=0; i<data.length; i++) { %>
                       
                            
                        <div class="row">
                              <div class="col-5" style="display: inline-block; padding: 75px; padding-bottom: 0px; border: black;">
                                      <img src="images/<%= data[i]['name'] %>.jpg" alt=".." height="250" width="400" >
                                  </div>
                                  <div  class="col-7" style="color: #17252A; display: inline-block; padding: 75px; padding-bottom: 0px; ">
                                    <form action="/update" method="POST">
                                      <label>Name:</label><input  id="value1" name="name" value=<%= data[i]['name'] %>><br>
                                    <label>Brand</label><input  id="value1" name="brand" value=<%= data[i]['brandName'] %>><br>
                                    <label>Status</label><input  id="value1" name="status" value=<%= data[i]['carStatus'] %>><br>
                                   
                                    <h4>Rental Rates:</h4><br>
                                    <label>Weekly:</label>
                                    <input  id="value1" name="weekly" value=<%= (data[i]['weekly']) %>><br>
                                    <label>daily:</label>
                                    <input  id="value1" name="daily" value=<%=(data[i]['daily']) %>><br>
                                    <label>hourly:</label>
                                    <input  id="value1" name="hourly" value=<%= (data[i]['hourly']) %>><br>

                                    <h4>Insurance Rates:</h4><br>
                                    <label>Weekly:</label>
                                    <input  id="value1" name="weeklyIn" value=<%= (data[i]['weeklyIn']) %>><br>
                                    <label>daily:</label>
                                    <input  id="value1" name="dailyIn" value=<%=(data[i]['dailyIn']) %>><br>
                                    <label>hourly:</label>
                                    <input  id="value1" name="hourlyIn" value=<%= (data[i]['hourlyIn']) %>><br>
                                    <input type="submit" id="findbutton" class="btn  btn-block " style=" width: 150px;margin-left: 20px;" name="" value="Update Data">
                                    </form>


                                   
                                    
          
          
                        </div>   
              </div> 
         
   
<hr>
  <% } %>
</div>
        
</div>

</div>           
</body>
<%- include("footer")-%>