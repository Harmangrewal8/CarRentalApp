<%- include("header") -%>
<body>
    <div id="carsdiv" class="container">
       <h1 class="text-center"> Clerk Panel</h1>
       <div class="login-form">
            <%if(total==""){%>
               <form action="/calculate" method="POST">
                  <label>Rental Number</label>
                     <input type="tel"  name="rentid" placeholder="Rental Number" ><br>
                  
                  <label>Return date & Time</label><br>
                     <input id="date1" type="date" name="returnDate" placeholder=""/>
                     <input type="time" name="returnTime" placeholder=""/> <br>
                     
                     <label>Audometer reading</label>
                     <input type="tel"  name="reading" placeholder="Audometer reading" ><br>
                     <label>Tank Status:     </label><br>
                     <div class="row">
                                                
                                                         
                      <div class="col-xs-4 col-md-4">
                              <div class="radio">
                                      <label><input type="radio" name="tank" checked value="full"> Full</label>
                                    </div>
                                    
                      </div>
                      <div class="">
                              <div class="radio">
                                      <label><input type="radio" name="tank"  value="notfull"> NotFull</label>
                                    </div>
                                    
                      </div>
                      </div>               
                     <br>
                     
                  
                  <input type="submit" class="btn btn-primary btn-block"value="Final Cost">
                  
                 </form>
               <%}else{%>
<h2> User's total amount is $ <%=total%></h2>
                  <%}%>
           
           
    
      </div> 

    </div>
</body>
